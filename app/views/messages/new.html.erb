<% if @message.errors.any? %>
  <p> Something went awry: </p>
  <ul>
    <% @message.errors.full_message.each  do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1> New Message </h1>
<%= form_for @message do |f| %>
  <%= f.label :to %>
  <%= f.text_field :to %>
  <%= f.label :from %>
  <%= f.text_field :from %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit class: "btn btn-primary btn-sm" %>
<% end %>
