<% if @message.errors.any? %>
  <p> Something went awry: </p>
  <ul>
    <% @message.errors.full_messages.each  do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<br>
<br>
<br>

<h1> New Message </h1>
<%= form_for @message do |f| %>
To: &nbsp;
  <% @contacts.order(name: :asc).each do |contact| %>
    <input type="checkbox" value="<%= contact.telephone %>" name="contact_telephones[]" id="message_to">
    <%= f.label contact.name, class: "form_names" %>
  <% end %>
  <br>
  <br>
  <%= f.label :from %>
  <%= f.text_field :from %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit class: "btn btn-primary btn-sm" %>
<% end %>
